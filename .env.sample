# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=campus_vault
POSTGRES_SSL_MODE=disable

# Goose migration settings
GOOSE_DRIVER=postgres
GOOSE_DBSTRING=postgres://postgres:your-password-here@localhost:5432/campus_vault?sslmode=disable

# Server Configuration
SERVER_PORT=8080

# JWT Configuration
JWT_SIGNING_KEY=secure-random-key-in-production
JWT_ISSUER=campus-vault
JWT_EXPIRY=24h

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILENAME=logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Default: http://localhost:3000,http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# AWS Configuration (LocalStack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566
AWS_EMAIL_SENDER=test@example.com
AWS_BUCKET=cv-backend-test-bucket

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# OTP / Auth Configuration
OTP_EXPIRY=5m
OTP_COOLDOWN=60s
OTP_MAX_ATTEMPTS=3
REFRESH_TOKEN_EXPIRY=168h
